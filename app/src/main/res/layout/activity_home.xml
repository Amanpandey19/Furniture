<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#DAD3C8"
    android:orientation="vertical"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent"
            android:src="@drawable/menu_fill0_wght400_grad0_opsz48" />


        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:src="@drawable/shopping_cart_fill0_wght400_grad0_opsz48" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/archivo_black"
        android:text="Hot Deals"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="20.66sp" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        app:cardCornerRadius="18dp"
        android:layout_marginHorizontal="20dp"
        android:background="#737272"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#737272"
        app:cardBackgroundColor="#737272"
        android:layout_height="157.91dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:backgroundTint="@android:color/transparent"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@android:color/transparent"
                android:layout_width="173.37dp"
                android:layout_height="153.91dp"
                android:src="@drawable/img_3"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="36dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="UPTO 75%"
                    android:textColor="@color/white"
                    android:textSize="13dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="DISCOUNT"
                    android:textColor="@color/white"
                    android:textSize="11dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:layout_marginTop="-7dp"
                    android:fontFamily="@font/big_shoulders_display"
                    android:maxHeight="0dp"
                    android:text="D.I.Y"
                    android:textColor="@color/white"
                    android:textSize="44dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="36dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="STARTS"
                    android:textColor="@color/white"
                    android:textSize="13dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="MIDNIGHT"
                    android:textColor="@color/white"
                    android:textSize="13dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="16 MARCH"
                    android:textColor="@color/white"
                    android:textSize="13dp" />

            </LinearLayout>


        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/archivo_black"
        android:text="New Arrivals"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/black"
        android:textSize="20.66sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/arrivals_rv"
        android:clipToPadding="false"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/archivo_black"
        android:text="Recently Viewed"
        android:layout_marginStart="20dp"
        android:layout_marginTop="23dp"
        android:textColor="@color/black"
        android:textSize="20.66sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/recentRv"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="17dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:layout_height="match_parent"/>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>

