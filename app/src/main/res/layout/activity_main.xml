<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DAD3C8"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-90dp"
        android:layout_marginBottom="50dp"
        android:layout_weight="4"
        android:background="@drawable/img"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/elegant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/epilogue_extrabold"
                android:text="Elegant"
                android:textColor="@color/black"
                android:textSize="44.93sp" />

        </LinearLayout>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-50dp"
        android:layout_weight="6"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="-5dp"
            android:fontFamily="@font/epilogue_extrabold"
            android:lineSpacingExtra="12sp"
            android:text="Simple Furnitures."
            android:textColor="@color/black"
            android:textSize="44.93sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="90dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins"
            android:text="Affordable home furniture, designs and ideas"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="40dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="114dp"
                android:layout_height="90dp"
                android:src="@drawable/img_2" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:layout_width="94dp"
                android:id="@+id/starthome"
                android:layout_height="94dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="2dp"
                android:backgroundTint="#62442B"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:elevation="3sp"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="Start"
                android:textColor="@color/white"
                app:elevation="3dp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>